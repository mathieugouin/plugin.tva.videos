<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.tva.videos" name="TVA" version="0.0.1" provider-name="Alexandre Paradis">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.beautifulsoup" version="3.2.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>MIT</license>
        <summary>TVA est un réseau de télévision canadien privé en langue française. Le réseau est actuellement détenu par le Groupe TVA, une filiale cotée en bourse de Québecor Média.</summary>
        <description>Contenu video provenant de videos.tva.ca</description>
        <website>https://github.com/service-paradis</website>
        <email>service.paradis@gmail.com</email>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
